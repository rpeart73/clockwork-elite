{
  "name": "@clockwork/elite",
  "version": "5.0.0",
  "description": "Enterprise-grade task and case note management system",
  "type": "module",
  "private": true,
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "vite --host",
    "build": "tsc && vite build && npm run build:analyze",
    "build:analyze": "vite-bundle-visualizer",
    "preview": "vite preview",
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "playwright test",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --coverageReporters=text-lcov | coveralls",
    "test:security": "npm audit && snyk test",
    "lint": "eslint src --ext .ts,.tsx --max-warnings 0",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css,md}\"",
    "validate": "npm run typecheck && npm run lint && npm run test:unit && npm run test:security",
    "prepare": "husky install",
    "storybook": "storybook dev -p 6006",
    "build:storybook": "storybook build",
    "analyze": "source-map-explorer 'dist/**/*.js'",
    "monitor:start": "node scripts/telemetry.js",
    "docs:api": "typedoc --out docs/api src",
    "docs:serve": "docsify serve docs",
    "perf:lighthouse": "lighthouse http://localhost:5173 --output html --output-path ./reports/lighthouse.html",
    "perf:bundle": "webpack-bundle-analyzer dist/stats.json",
    "docker:build": "docker build -t clockwork-elite:latest .",
    "docker:run": "docker run -p 8080:80 clockwork-elite:latest",
    "k8s:deploy": "kubectl apply -f k8s/",
    "feature:toggle": "node scripts/feature-flags.js"
  },
  "dependencies": {
    "@microsoft/applicationinsights-web": "^3.0.5",
    "@opentelemetry/api": "^1.7.0",
    "@opentelemetry/auto-instrumentations-web": "^0.34.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.46.0",
    "@opentelemetry/instrumentation": "^0.46.0",
    "@opentelemetry/resources": "^1.19.0",
    "@opentelemetry/sdk-trace-web": "^1.19.0",
    "@sentry/browser": "^7.93.0",
    "@tanstack/react-query": "^5.17.9",
    "axios": "^1.6.5",
    "date-fns": "^2.30.0",
    "date-fns-tz": "^2.0.0",
    "dompurify": "^3.0.8",
    "idb": "^8.0.0",
    "inversify": "^6.0.2",
    "joi": "^17.11.0",
    "lodash-es": "^4.17.21",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-error-boundary": "^4.0.12",
    "react-hook-form": "^7.48.2",
    "react-router-dom": "^6.21.2",
    "reflect-metadata": "^0.2.1",
    "rxjs": "^7.8.1",
    "uuid": "^9.0.1",
    "web-vitals": "^3.5.1",
    "workbox-window": "^7.0.0",
    "zod": "^3.22.4",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.4",
    "@commitlint/config-conventional": "^18.4.4",
    "@playwright/test": "^1.40.1",
    "@storybook/addon-a11y": "^7.6.7",
    "@storybook/addon-essentials": "^7.6.7",
    "@storybook/addon-interactions": "^7.6.7",
    "@storybook/addon-links": "^7.6.7",
    "@storybook/blocks": "^7.6.7",
    "@storybook/react": "^7.6.7",
    "@storybook/react-vite": "^7.6.7",
    "@storybook/testing-library": "^0.2.2",
    "@testing-library/dom": "^9.3.4",
    "@testing-library/jest-dom": "^6.2.0",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.2",
    "@types/dompurify": "^3.0.5",
    "@types/jest": "^29.5.11",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.10.8",
    "@types/react": "^18.2.47",
    "@types/react-dom": "^18.2.18",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitejs/plugin-react": "^4.2.1",
    "chromatic": "^10.2.0",
    "coveralls": "^3.1.1",
    "docsify-cli": "^4.4.4",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-security": "^2.1.0",
    "eslint-plugin-sonarjs": "^0.23.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lighthouse": "^11.4.0",
    "lint-staged": "^15.2.0",
    "msw": "^2.0.11",
    "prettier": "^3.2.4",
    "rollup-plugin-visualizer": "^5.12.0",
    "snyk": "^1.1269.0",
    "source-map-explorer": "^2.5.3",
    "storybook": "^7.6.7",
    "ts-jest": "^29.1.1",
    "typedoc": "^0.25.7",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "vite-bundle-visualizer": "^1.0.1",
    "vite-plugin-checker": "^0.6.2",
    "vite-plugin-pwa": "^0.17.4",
    "webpack-bundle-analyzer": "^4.10.1"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix --max-warnings 0",
      "prettier --write"
    ],
    "*.{css,md}": "prettier --write"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all",
      "not and_qq < 11"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "msw": {
    "workerDirectory": "public"
  }
}